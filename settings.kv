#:kivy 1.10.0
#:import kivy kivy
#:import win kivy.core.window

<SettingsScreen>:
    cols: 1
    GridLayout:
        cols:1
        width: 800
        padding: 0
        spacing: 0
        size_hint: None, 1

        ScrollView:
            size_hint: None, None
            size: 250, 480
            pos_hint: {'center_x': .5, 'center_y': .5}
            id: scrollview

            GridLayout:
                cols: 2
                padding: 10
                spacing: 5
                height: self.minimum_height
                size_hint: None, None
                do_scroll_x: False
                id: container

<IngredientDropdownItem>


<IngredientDropdownItem>
    size_hint: None, None
    size: 250, 40

<RandomDrinkButton>
    size_hint: None, None
    size: 250, 40
    text: 'Random Drink'

<ModalView>
    size_hint: None, None
    auto_dismiss: False
    size: 440, 115
    background_normal: ''
    Image:
        source: './images/Dispensing.gif'
        anim_delay: 0.5
        size_hint: None, None
        allow_stretch: True
        size: 400, 75

