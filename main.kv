#:kivy 1.10.0
#:import kivy kivy
#:import win kivy.core.window

<MainScreen>:
    cols: 2
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size: 550, 480
        size_hint: None, None

        Image:
            source: './images/Background.jpg'

        Image:
            id: preview
            source: './images/hola.png'
            size: 550, 480
            allow_stretch: True
            size_hint: None, None

    GridLayout:
        cols:1
        width: 250
        padding: 0
        spacing: 0
        size_hint: None, 1

        ScrollView:
            size_hint: None, None
            size: 250, 480
            pos_hint: {'center_x': .5, 'center_y': .5}
            id: scrollview

            GridLayout:
                cols: 1
                padding: 10
                spacing: 5
                height: self.minimum_height
                size_hint: None, None
                do_scroll_x: False
                id: container


<ScrollButton>
    size_hint: None, None
    size: 250, 40

<RandomDrinkButton>
    size_hint: None, None
    size: 250, 40
    text: 'Random Drink'

<ModalView>
    size_hint: None, None
    auto_dismiss: False
    size: 440, 115
    background_normal: ''
    Image:
        source: './images/Dispensing.gif'
        anim_delay: 0.5
        size_hint: None, None
        allow_stretch: True
        size: 400, 75

