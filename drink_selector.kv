#:kivy 1.10.0
#:import kivy kivy
#:import win kivy.core.window
<DrinkSelectorScreen>:
    on_pre_enter: self.setup_drink_selector()

<DrinkSelector>:
    cols: 2
    pos_hint: {'x': 0, 'y': 0}
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size: 550, 480
        size_hint: None, None

        Image:
            source: './images/Background.jpg'

        Image:
            id: preview
            source: './images/hola.png'
            size: 550, 480
            allow_stretch: True
            size_hint: None, None

    GridLayout:
        cols:1
        width: 250
        padding: 0
        spacing: 0
        size_hint: None, 1

        ScrollView:
            size_hint: None, None
            size: 250, 480
            pos_hint: {'center_x': .5, 'center_y': .5}
            id: scrollview

            GridLayout:
                cols: 1
                padding: 10
                spacing: 5
                height: self.minimum_height
                size_hint: None, None
                do_scroll_x: False
                id: container


<ScrollButton>
    size_hint: None, None
    size: 250, 40

<RandomDrinkButton>
    size_hint: None, None
    size: 250, 40
    text: 'Random Drink'

<DispensingModal>
    size_hint: None, None
    auto_dismiss: False
    size: 440, 115
    background_normal: ''
    Image:
        source: './images/Dispensing.gif'
        anim_delay: 0.5
        size_hint: None, None
        allow_stretch: True
        size: 400, 75

<ErrorModal>
    size_hint: None, None
    auto_dismiss: False
    size: 440, 200
    background_normal: ''
    padding: 20
    GridLayout:
        cols:1
        width: 400
        padding: 0
        spacing: 10
        
        Label:
            id: errorheader
            text: 'Error'
            font_size: 40
            halign: 'center'

        Label:
            id: errormessage
            text: root.err_msg + "\n"
            halign: 'center'
            font_size: 20
            text_size: self.width, None
            height: self.texture_size[1]
            size_hint_y: None
